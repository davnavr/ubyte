{
  "name": "UByte Text Module",
  "scopeName": "source.txtmdl",
  "fileTypes": [
    "txtmdl"
  ],
  "foldingStartMarker": "\\{",
  "foldingStopMarker": "\\}",
  "patterns": [
    {
      "match": "^//.*\n",
      "captures": {
        "0": {
          "name": "comment.line.double-slash.txtmdl"
        }
      }
    },
    {
      "match": "\\.\\w+",
      "captures": {
        "0": {
          "name": "keyword.txtmdl"
        }
      }
    },
    {
      "include": "#type-primitive"
    },
    {
      "include": "#register"
    },
    {
      "include": "#identifier"
    }
  ],
  "repository": {
    "type-primitive": {
      "match": "([su](8|16|32|64|native)|char(16|32)|f(32|64)|bool)",
      "captures": {
        "0": {
          "name": "storage.type.keyword.txtmdl"
        }
      }
    },
    "register": {
      "match": "(\\$|%)\\w+",
      "captures": {
        "0": {
          "name": "variable.other.txtmdl"
        }
      }
    },
    "identifier": {
      "match": "@\\w+",
      "captures": {
        "0": {
          "name": "entity.other.txtmdl"
        }
      }
    }
  }
}
